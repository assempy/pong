<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="864.0" prefWidth="1536.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pingpong.SceneController1">
    <children>
        <!-- Фоновое изображение -->
        <ImageView fitHeight="864" fitWidth="1536" preserveRatio="true">
            <image>
                <Image url="@intro.png" />
            </image>

            <!-- Привязка фона к границам AnchorPane -->
            <AnchorPane.topAnchor>0.0</AnchorPane.topAnchor>
            <AnchorPane.bottomAnchor>0.0</AnchorPane.bottomAnchor>
            <AnchorPane.leftAnchor>0.0</AnchorPane.leftAnchor>
            <AnchorPane.rightAnchor>0.0</AnchorPane.rightAnchor>
        </ImageView>

        <Button layoutX="600.0" layoutY="370.0" onAction="#startGame" style="-fx-background-color: transparent; -fx-border-width: 0;">
            <graphic>
                <ImageView fitHeight="165" fitWidth="250">
                    <image>
                        <Image url="@play.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </children>
</AnchorPane>
